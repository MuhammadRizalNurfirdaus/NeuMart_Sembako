# Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Backend API
NEXT_PUBLIC_API_URL=http://localhost:3001

# OpenAI API
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Midtrans Payment (Optional)
NEXT_PUBLIC_MIDTRANS_CLIENT_KEY=your_midtrans_client_key_here

# Database (for reference only - actual connection should be in backend)
# DATABASE_URL=postgresql://username:password@host:port/database
# Example: postgresql://user:pass@localhost:5432/neumart_db

# IMPORTANT: Never commit actual credentials to git!
# Always use .env.local for actual values (which is in .gitignore)
